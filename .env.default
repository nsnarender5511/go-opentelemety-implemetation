# --- Service Identification ---
OTEL_SERVICE_NAME="product-service-default"
SERVICE_VERSION="0.1.0-default"

# --- OTel Exporter ---
# OTEL_EXPORTER_OTLP_ENDPOINT= # Required - No default, must be in .env or environment
OTEL_EXPORTER_INSECURE=false
OTEL_SAMPLE_RATIO=1.0

# --- Logging ---
LOG_LEVEL=info
LOG_FORMAT=text

# --- Service Configuration ---
# PRODUCT_SERVICE_PORT= # Required - No default, must be in .env or environment
# DATA_FILE_PATH= # Required - No default, must be in .env or environment

# --- Shutdown ---
SHUTDOWN_TOTAL_TIMEOUT_SEC=30
SHUTDOWN_SERVER_TIMEOUT_SEC=15
SHUTDOWN_OTEL_MIN_TIMEOUT_SEC=5

# --- OTel Advanced (Optional) ---
# OTEL_BATCH_TIMEOUT_MS=5000
# OTEL_MAX_EXPORT_BATCH_SIZE=512
# OTEL_LOG_MAX_QUEUE_SIZE=2048
# OTEL_LOG_EXPORT_TIMEOUT_MS=30000
# OTEL_LOG_EXPORT_INTERVAL_MS=1000