# OpenTelemetry Configuration
OTEL_SERVICE_NAME=product-service
SERVICE_VERSION=0.1.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://signoz-otel-collector:4317
OTEL_EXPORTER_INSECURE=true
OTEL_SAMPLE_RATIO=1.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Service Configuration
PRODUCT_SERVICE_PORT=8082
DATA_FILE_PATH=/app/data.json

# Shutdown Timeouts
SHUTDOWN_TOTAL_TIMEOUT_SEC=30
SHUTDOWN_SERVER_TIMEOUT_SEC=10
SHUTDOWN_OTEL_MIN_TIMEOUT_SEC=5

# Advanced OpenTelemetry Configuration (Optional)
OTEL_BATCH_TIMEOUT_MS=5000
OTEL_MAX_EXPORT_BATCH_SIZE=512
OTEL_LOG_MAX_QUEUE_SIZE=2048
OTEL_LOG_EXPORT_TIMEOUT_MS=30000
OTEL_LOG_EXPORT_INTERVAL_MS=1000
